extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 索引
            th 分类
            th 标签
            th 更新时间
            th pv
            th 查看
            th 修改
            th 删除
        tbody
          each item in tis
            tr(class="item-id-#{item._id}")
              td #{item.index}
              td #{item.category.name}
              td #{item.tags}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td #{item.pv}
              td: a(target="_blank", href="/ti/#{item._id}") 查看
              td: a(target="_blank", href="/admin/ti/update/#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src="/js/admin.js")