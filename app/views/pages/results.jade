extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if tis && tis.length > 0
            each item in tis
              .col-md-2
                .thumbnail
                  a(href="/ti/#{item._id}")
                    //- if(item.imageContent)
                      - if (item.imageContent.indexOf('http') > -1)
                        img(src="#{item.imageContent}", alt="#{item.index}")
                      - else
                        img(src="/upload/#{item.imageContent}", alt="#{item.index}")
                    .caption
                      h4 #{item.index}
                      p  #{item.textContent}
                      p: a.btn.btn-primary(href="/ti/#{item._id}", role="button") 查看详细
      ul.pagination
        - for (var i = 0; i < totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/results?#{query}&p=#{i}') #{i + 1}
          - }
        - }