extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panel-body
            if cat.tis && cat.tis.length > 0
              each item in cat.tis
                .col-md-2
                  .thumbnail
                    a(href="/ti/#{item._id}")
                      //- if(item.imageContent)
                        - if (item.imageContent.indexOf('http') > -1)
                          img(src="#{item.imageContent}", alt="#{item.index}")
                        - else
                          img(src="/upload/#{item.imageContent}", alt="#{item.index}")
                    .caption
                      h4 #{item.index}
                      p  #{item.textContent}
                      p: a.btn.btn-primary(href="/ti/#{item._id}", role="button") 查看详细